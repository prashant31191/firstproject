<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue_bg" >

    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="@dimen/item_height_48">

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black_gray"
                android:text="@string/film_order_date"/>

            <TextView
                android:id="@+id/item_eticket_order_date"
                android:layout_width="fill_parent"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black"
                android:text="2013-09-18"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="@dimen/item_height_48">

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black_gray"
                android:text="@string/film_order_no"/>

            <TextView
                android:id="@+id/item_eticket_order_no"
                android:layout_width="fill_parent"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black"
                android:text="1235566"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="@dimen/item_height_48">

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black_gray"
                android:text="@string/film_order_cinema"/>

            <TextView
                android:id="@+id/item_eticket_order_cinema"
                android:layout_width="fill_parent"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/nav_next"
                style="@style/body_text_black"
                android:text="市一宫"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_eticket_order"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="@dimen/item_height_48">

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black_gray"
                android:text="@string/film_order_type"/>

            <TextView
                android:id="@+id/item_eticket_order_type"
                android:layout_width="fill_parent"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black"
                android:text="2D 电子券"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="@dimen/item_height_48">

            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="7.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black_gray"
                android:text="@string/film_order_status"/>

            <TextView
                android:id="@+id/item_eticket_order_status"
                android:layout_width="fill_parent"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                style="@style/body_text_black"
                android:text="支付成功"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>