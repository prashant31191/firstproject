<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pic_chat_session_item_bg"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.5" >

        <ImageView
            android:id="@+id/headImage"
            android:layout_width="@dimen/head_width"
            android:layout_height="@dimen/head_height"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_15"
            android:src="@drawable/trend_icon" />

        <TextView
            android:id="@+id/messageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/number_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/treandLayout"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_marginRight="@dimen/backLeft"
        android:layout_weight="1"
        android:background="@drawable/message_list_h" >

        <RelativeLayout
            android:id="@+id/m_t_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/user_name" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/msg_time"
                android:textSize="@dimen/time" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/msg_content" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/msg_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>