<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:showu="http://schemas.android.com/apk/res/com.qinnuan.engine"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey_shallow" >

    <com.qinnuan.common.widget.TitleWidget
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            showu:right_view_text="分享"
            android:id="@id/titleBar"></com.qinnuan.common.widget.TitleWidget>

    <EditText
        android:id="@+id/activity_film_share_content"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleBar"
        android:background="#FFFFFF"
        android:gravity="fill_horizontal"
        android:layout_margin="@dimen/margin_5"
        android:hint="通过爆谷,与朋友分享电影的乐趣~"
        android:padding="5dp" />

    <TextView
        android:id="@+id/activity_film_share_content_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_film_share_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_marginRight="68dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_green" />

</RelativeLayout>