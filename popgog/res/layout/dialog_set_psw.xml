<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/title_bar_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_set_psw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="设置你的登录密码"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <EditText
        android:id="@+id/dialog_set_psw_psw"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:background="@drawable/shap_agle_white_bg"
        android:layout_below="@+id/dialog_set_psw_title"
        android:hint="输入密码(不小于4位)"
        android:layout_height="wrap_content">

        <requestFocus/>

    </EditText>

    <EditText
        android:id="@+id/dialog_set_psw_pswrepeat"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/shap_agle_white_bg"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:layout_below="@+id/dialog_set_psw_psw"
        android:layout_height="wrap_content">

        <requestFocus/>

    </EditText>

    <Button
        android:layout_below="@+id/dialog_set_psw_pswrepeat"
        android:id="@+id/dialog_set_psw_setpsw"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="设置登录密码"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_bg"/>

    <Button
        android:layout_below="@+id/dialog_set_psw_setpsw"
        android:id="@+id/dialog_set_psw_cancel"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="取消"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_bg"/>

</RelativeLayout>