<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res/com.qinnuan.engine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue_bg"
    android:orientation="vertical">

    <com.qinnuan.common.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="修改密码"
        showu:right_view_text="保存" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_white_top"
        android:orientation="horizontal">

        <TextView
            style="@style/black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="旧密码"/>

        <EditText
            android:id="@+id/et_old_pass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:background="@null"
            android:hint="@string/input_old_pass"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/item_white_middle"
        android:orientation="horizontal">

        <TextView
            style="@style/black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="新密码"/>

        <EditText
            android:id="@+id/et_new_pass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:background="@null"
            android:hint="请输入新密码(不小于4位)"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_white_bottom"
        android:orientation="horizontal">

        <TextView
            style="@style/black_16sp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="重复密码"/>

        <EditText
            android:id="@+id/et_repeat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:background="@null"
            android:hint="@string/input_repeat_pass"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="16sp"/>
    </LinearLayout>



</LinearLayout>