<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res/com.showu.baogu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_blue_bg"
    android:orientation="vertical">

    <com.qinnuan.common.widget.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="发表动态"
        showu:right_view_text="发表"
        android:id="@id/titleBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_16"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_dynamic_publish_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="top"
            android:padding="4dp"
            android:hint="我想说..."
            android:background="@drawable/shap_agle_white_bg"/>

        <TextView
            android:id="@+id/activity_dynamic_publish_textcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140"
            android:textColor="@color/green"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/activity_dynamic_publish_content"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="@dimen/margin_8"
            android:background="@drawable/shap_agle_white_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/activity_dynamic_publish_imglist"
                android:orientation="horizontal">

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:src="@drawable/photo_add_bg"/>-->
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_dynamic_publish_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/photo_add_bg"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_dynamic_publish_share"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingTop="@dimen/margin_4"
        android:paddingBottom="@dimen/margin_4"
        android:background="@drawable/shap_round_gray_bg"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:drawableLeft="@drawable/sina_v"
        style="@style/body_text_black_gray"
        android:text="  分享到微博"
        android:layout_height="wrap_content"/>


</LinearLayout>
