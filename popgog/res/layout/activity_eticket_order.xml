<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:showu="http://schemas.android.com/apk/res/com.qinnuan.engine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_blue_bg"
    tools:context=".RegistMain">

    <com.qinnuan.common.widget.TitleWidget
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/film_order_eticketdetail"
        android:id="@id/titleBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_date"/>

                    <TextView
                        android:id="@+id/eticket_order_date"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="2013-09-18"/>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_no"/>

                    <TextView
                        android:id="@+id/eticket_order_no"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="1235566"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_cinema"/>

                    <TextView
                        android:id="@+id/eticket_order_cinema"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="市一宫"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eticket_order"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_type"/>

                    <TextView
                        android:id="@+id/eticket_order_type"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="超人"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_phone"/>

                    <TextView
                        android:id="@+id/eticket_order_phone"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="12345577"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_count"/>

                    <TextView
                        android:id="@+id/eticket_order_count"
                        android:layout_width="fill_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        android:text="300"/>
                </LinearLayout>

            </LinearLayout>

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <Button
                android:id="@+id/eticket_order_sayfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16"
                style="@style/body_text_white"
                android:gravity="center"
                android:text="@string/film_order_sayforfriend"
                android:background="@drawable/btn_green"/>

            <Button
                android:id="@+id/eticket_order_howgetticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/body_text_white"
                android:gravity="center"
                android:text="@string/film_order_howtogetticket"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/btn_yellow"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>