<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res/com.qinnuan.engine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_blue_bg"
    android:orientation="vertical">

    <com.qinnuan.common.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/user_count_recharge"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_32"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_recharge_finish_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/defaul_head"/>

        <TextView
            android:id="@+id/fragment_recharge_finish_tips"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_height="wrap_content"
            android:text="充值成功"/>

        <Button
            android:id="@+id/fragment_recharge_finish_back"
            style="@style/body_text_white"
            android:text="@string/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32"
            android:background="@drawable/btn_green_bg"/>
    </LinearLayout>


</LinearLayout>