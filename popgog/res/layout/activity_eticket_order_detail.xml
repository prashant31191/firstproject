<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:showu="http://schemas.android.com/apk/res/com.showu.baogu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_blue_bg"
    tools:context=".RegistMain">

    <com.showu.common.widget.TitleWidget
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/film_order_eticketdetail"
        android:id="@id/titleBar"/>

    <!-- <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/white"
            android:id="@+id/detaillayout"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_date"/>

                <TextView
                    android:id="@+id/eticket_order_detail_date"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="2013-09-18"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_no"/>

                <TextView
                    android:id="@+id/eticket_order_detail_no"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="1235566"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_cinema"/>

                <TextView
                    android:id="@+id/eticket_order_detail_cinema"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="市一宫"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eticket_order"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_type"/>

                <TextView
                    android:id="@+id/eticket_order_detail_type"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="超人"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_phone"/>

                <TextView
                    android:id="@+id/eticket_order_detail_phone"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="12345577"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10"
                android:paddingTop="@dimen/margin_4"
                android:paddingBottom="@dimen/margin_4"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black_gray"
                    android:text="@string/film_order_count"/>

                <TextView
                    android:id="@+id/eticket_order_detail_count"
                    android:layout_width="fill_parent"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    style="@style/body_text_black"
                    android:text="300"/>
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/activity_eticket_order_detail_qrs"
            android:layout_width="fill_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/detaillayout"
            android:layout_above="@+id/bottomlayout"
            android:layout_height="fill_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/bottomlayout"
            android:background="@color/app_blue_bg"
            android:layout_alignParentBottom="true">

            Button
                android:id="@+id/eticket_order_detail_sayfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                style="@style/body_text_white"
                android:gravity="center"
                android:text="@string/film_order_sayforfriend"
                android:background="@drawable/btn_green_bg"/>

            <Button
                android:id="@+id/eticket_order_detail_howgetticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/body_text_white"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="@string/film_order_howtogetticket"
                android:background="@drawable/btn_yellow_bg"/>
        </LinearLayout>
    </RelativeLayout>
    <!-- </ScrollView>-->

</LinearLayout>