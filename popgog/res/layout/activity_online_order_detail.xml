<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res/com.showu.baogu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_blue_bg" >

    <com.showu.common.widget.TitleWidget
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/film_order_orderdetail"
        android:id="@id/titleBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <LinearLayout
                android:id="@+id/online_order_top"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_date"/>

                    <TextView
                        android:id="@+id/online_order_detail_date"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_no"/>

                    <TextView
                        android:id="@+id/online_order_detail_uorderid"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_cinema"/>

                    <TextView
                        android:id="@+id/online_order_detail_cinema"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/online_order_detail"
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_film"/>

                    <TextView
                        android:id="@+id/online_order_detail_film"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_screen"/>

                    <TextView
                        android:id="@+id/online_order_detail_screen"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_seat"/>

                    <TextView
                        android:id="@+id/online_order_detail_seat"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_orange"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_phone"/>

                    <TextView
                        android:id="@+id/online_order_detail_phone"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_count"/>

                    <TextView
                        android:id="@+id/online_order_detail_count"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:paddingTop="@dimen/margin_4"
                    android:paddingBottom="@dimen/margin_4"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_weight="7.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_black_gray"
                        android:text="@string/film_order_ticketno"/>

                    <TextView
                        android:id="@+id/online_order_detail_ticketno"
                        android:layout_width="fill_parent"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        style="@style/body_text_orange"
                        />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/online_order_detail_qr"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_alignTop="@+id/online_order_top"
                android:layout_alignParentRight="true"/>


            <Button
                android:id="@+id/online_order_detail_sayfriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_16"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@+id/online_order_top"
                android:text="@string/film_order_sayforfriend"
                android:background="@drawable/btn_green"/>

            <Button
                android:id="@+id/online_order_detail_howgetticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_below="@+id/online_order_detail_sayfriend"
                android:text="@string/film_order_howtogetticket"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:background="@drawable/btn_yellow"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>