<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:showu="http://schemas.android.com/apk/res/com.qinnuan.engine"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:background="@color/cinema_bg"
                android:layout_height="fill_parent"
                android:orientation="vertical">

    <com.qinnuan.common.widget.TitleWidget
            android:id="@id/titleBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            showu:center_view_text="@string/allredy_pay"
            />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleBar"
            android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/timeLayout"
            android:layout_width="fill_parent"
            android:background="@color/title_bar_bg"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timeLayout"
            android:layout_alignTop="@+id/timeLayout">

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/cinemaName"
                    android:text="cinemaName"
                    android:textColor="@color/day"
                   android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:id="@+id/hallName"
                    android:text="hallName"
                    android:textColor="@color/day"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            <TextView
                    android:id="@+id/time"
                    android:textColor="@color/day"
                    android:text="time"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <ImageView
                android:layout_width="80dp"
                android:id="@+id/film_img"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:layout_height="120dp"></ImageView>
    </RelativeLayout>
        <ImageView
                android:layout_width="fill_parent"
                android:id="@+id/seat_img"
                android:scaleType="fitCenter"
                android:background="@color/cinema_bg"
                android:layout_alignParentRight="true"
                android:layout_height="fill_parent"></ImageView>
    </LinearLayout>

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center"
            android:background="@color/title_bar_bg"
            android:layout_width="fill_parent">

        <Button
                android:id="@+id/share"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:background="@drawable/share_icon"
                android:layout_width="wrap_content"></Button>

        <TextView
                android:textColor="@color/day"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/share_tip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"></TextView>
    </LinearLayout>
</RelativeLayout>